@model SchoolIntelligentWeb.DomainClasses.MoreClasses.User
@{
    ViewBag.Title = "صفحه اصلی";
}

<div class="box">
    @using (Ajax.BeginForm("Loginaction", "Login", new AjaxOptions { HttpMethod = "Post", Url = "/Login/Loginaction", LoadingElementId = "imgloading", OnBegin = "showhide(0)", OnComplete = "showhide(1)" }))
    {
        @Html.AntiForgeryToken()

        <div class="row" style="margin-top: 60px">
            <div id="logingroup" class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                <h2 style="text-align: center;">ورود به سایت</h2>
                <hr class="colorgraph">
                <div class="row">
                    <h3 class="text-center form-control" id="Error" style="color: black; background-color: #ff4500; display: none;"></h3>
                </div>
                <div class="form-group">
                    <select class="input-large form-control" name="Roll" id="Roll" style="text-align: right;">
                        <option value="1" style="text-align: right;">معلم</option>
                        <option value="2" selected="selected" style="text-align: right;">دانش آموز</option>
                        <option value="3" selected="selected" style="text-align: right;">اولیا</option>
                    </select>
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(p => p.NationalCode, new { @class = "form-control input-lg required", placeholder = "کد ملی", style = "text-align: right;" })
                    @Html.ValidationMessageFor(p => p.NationalCode)
                </div>
                <div class="form-group">

                    @Html.TextBoxFor(p => p.Password, new { @class = "form-control input-lg required", type = "password", placeholder = "پسورد", style = "text-align: right;" })
                    @Html.ValidationMessageFor(p => p.Password)
                </div>

                <span class="button-checkbox">
                    <a href="/Home/Forget" class="btn btn-link pull-right">رمز خود را فراموش کرده ام؟</a>
                </span>
                <hr class="colorgraph">
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <input type="submit" class="btn btn-lg btn-success btn-block" value="ورود" />
                    </div>
                  
                </div>
            </div>

        </div>
    }
    <script>
        function showhide(data) {
            if (data == 0) {
                $('#logingroup').attr('style', 'display:none;');
            } else {
                $('#logingroup').attr('style', 'display:normal;');
            }
        }
    </script>
</div>