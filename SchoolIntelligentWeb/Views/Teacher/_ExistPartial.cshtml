@model List<SchoolIntelligentWeb.DomainClasses.ViewModels.GradePage>

<div class="row" id="tablehozur">
    <div class="col-lg-12 ">
        <div class="table-responsive scrollable membership-pricing-table">
            <table class="table table-responsive" style="direction: rtl; width: 100%; height: 100%;">
                <thead>
                    <tr id="alldate">
                        <th class="text-center">
                            نام/تاریخ
                        </th>
                        @{
                            if (Model.Any())
                            {
                            foreach (var dates in Model[0].AllGrades)
                            {
                                <th class="text-center" style="direction: rtl;">
                                    @dates.Date
                                </th>
                            }
                            }
                        }
                    </tr>
                </thead>
                <tbody id="allname">
                    @{
                        int count = Model.Count();
                        for (int i = 0; i < count; i++)
                        {
                            <tr class="active">
                                <td class="text-center">
                                    @Model[i].Name
                                </td>
                                @{
                            foreach (var exists in Model[i].AllGrades)
                            {

                                if (exists.StudentPresent == "p")
                                {
                                    <td><span class="icon-yes glyphicon glyphicon-ok-circle"></span></td>
                                }
                                else if (exists.StudentPresent == "a")
                                {
                                    <td><span class="icon-no glyphicon glyphicon-remove-circle"></span></td>
                                }
                            }
                                }
                            </tr>
                        }


                    }


                </tbody>
            </table>
        </div>
    </div>
</div>