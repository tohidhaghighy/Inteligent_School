@model List<SchoolIntelligentWeb.DomainClasses.OnlineClass>

<div class="row">
    <p class="text-center">لیست کلاس های انلاین</p>
</div>
<div class="row" id="tabletest">
    <div class="col-md-12">
        <div class="table-responsive">
            <table id="mytable" class="table table-bordred table-striped">
                <thead>
                <th class="text-center">نام معلم</th>
                <th class="text-center">نام خانوادگی</th>
                <th class="text-center">تاریخ شروع</th>
                <th class="text-center">ایمیل</th>
                <th class="text-center">شماره موبایل</th>
                <th class="text-center">نام کاربری</th>
                <th class="text-center">افزودن فایل</th>
                <th class="text-center">حذف کلاس</th>
                </thead>
                <tbody id="filelist">
                    @{
                        if (Model != null)
                        {

                            foreach (var classonline in Model)
                            {
                                <tr>
                                    <td class="text-center">@classonline.Name</td>
                                    <td class="text-center">@classonline.Family</td>
                                    <td class="text-center">@classonline.Date</td>
                                    <td class="text-center">@classonline.Email</td>
                                    <td class="text-center">@classonline.Phone</td>
                                    <td class="text-center">@classonline.Username</td>
                                    <td class="text-center">
                                        <p>
                                            <button class="btn btn-default btn-xs" data-title="افزودن فایل" onclick="addfile(@classonline.Id)"><span>افزودن فایل</span></button>
                                        </p>
                                    </td>
                                    <td class="text-center">
                                        <p>
                                            <button class="btn btn-danger btn-xs" data-title="حذف کلاس" onclick="deleteclass(@classonline.Id)"><span>حذف</span></button>
                                        </p>
                                    </td>
                                    <td class="text-center">
                                        <p>
                                            <button class="btn btn-success btn-xs" data-title="چت روم" onclick="Onlineclass('@classonline.Username')"><span>ورود به چت روم</span></button>
                                        </p>
                                    </td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
