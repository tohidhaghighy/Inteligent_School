@model List<SchoolIntelligentWeb.DomainClasses.MoreClasses.Multiply_ChoiseItems>

<div class="container" style="direction: rtl;">
    
    <div class="row" id="tableMultichoise">
        <div class="col-md-12">
            <div class="table-responsive">
                <table id="mytable" class="table table-bordred table-striped">
                    <thead>
                    <th class="text-center">شماره</th>
                    <th class="text-center">گزینه</th>
                    <th class="text-center">حذف</th>
                    </thead>
                    <tbody id="filelist">
                    @{
                        if (Model != null)
                        {

                            foreach (var questions in Model)
                            {
                                <tr>
                                    <td class="text-center">@questions.Count</td>
                                    <td class="text-center">@questions.Text</td>
                                    <td class="text-center">
                                        <p >
                                            <button class="btn btn-danger btn-xs" data-title="حذف سوال" onclick="deleteMultichoise(@questions.Id, @questions.QuestionId)"><span class="glyphicon glyphicon-remove"></span></button>
                                        </p>
                                    </td>
                                </tr>
                            }
                        }
                    }
                    </tbody>
                </table>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>
