@model SchoolIntelligentWeb.DomainClasses.ViewModels.Schadulerlist
@{
    ViewBag.Title = "schedule";
    Layout = "~/Views/Shared/_LayoutParentPanel.cshtml";
}

<div class="container" id="loadpage">
    <hr />
    <button type="button" class="btn btn-success ribbon buttonmenu" style="background-color: #16a085;">برنامه هفتگی </button>
    <div class="table-responsive">
        <div class="col-lg-12">
            <div class="table-responsive scrollable">
                <table class="table table-responsive" style="direction: rtl; width: 100%; height: 100%;">
                    <tbody>
                        <tr>
                            <th></th>
                            @{
                                for (int i = 1; i <= Model.Bell; i++)
                                {
                                    <th class="text-center" style="direction: rtl; background-color: #f5f5f5">
                                         زنگ @i 
                                    </th>
                                }
                            }


                        </tr>
                        <tr>
                            <td class="text-center" style="direction: rtl; background-color: #f5f5f5">شنبه</td>
                            @{
                                foreach (var day in Model.Saturday)
                                {
                                    <td class="text-center" style="background-color: #fff5ee">@day.Name</td>
                                }
                            }

                        </tr>
                        <tr>
                            <td class="text-center" style="direction: rtl; background-color: #f5f5f5">یکشنبه</td>
                            @{
                                foreach (var day in Model.Sunday)
                                {
                                    <td class="text-center" style="background-color: #fff5ee">@day.Name</td>
                                }
                            }

                        </tr>
                        <tr>
                            <td class="text-center" style="direction: rtl; background-color: #f5f5f5">دوشنبه</td>
                            @{
                                foreach (var day in Model.Monday)
                                {
                                    <td class="text-center" style="background-color: #fff5ee">@day.Name</td>
                                }
                            }
                        </tr>
                        <tr>
                            <td class="text-center" style="direction: rtl; background-color: #f5f5f5">سه شنبه</td>
                            @{
                                foreach (var day in Model.Tuesday)
                                {
                                    <td class="text-center" style="background-color: #fff5ee">@day.Name</td>
                                }
                            }
                        </tr>
                        <tr>
                            <td class="text-center" style="direction: rtl; background-color: #f5f5f5">چهارشنبه</td>
                            @{
                                foreach (var day in Model.Wednesday)
                                {
                                    <td class="text-center" style="background-color: #fff5ee">@day.Name</td>
                                }
                            }
                        </tr>
                        <tr>
                            <td class="text-center" style="direction: rtl; background-color: #f5f5f5">پنج شنبه</td>
                            @{
                                foreach (var day in Model.Thursday)
                                {
                                    <td class="text-center" style="background-color: #fff5ee">@day.Name</td>
                                }
                            }
                        </tr>
                        <tr>
                            <td class="text-center" style="direction: rtl; background-color: #f5f5f5">جمعه</td>
                            @{
                                foreach (var day in Model.Friday)
                                {
                                    <td class="text-center" style="background-color: #fff5ee">@day.Name</td>
                                }
                            }
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>


<script>
    window.onload = function () {
        document.getElementById("loadpage").scrollIntoView({ behavior: 'smooth' });
    };
</script>